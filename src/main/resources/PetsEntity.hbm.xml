<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="ru.javastudy.hibernate.dao.PetsEntity" table="pets" schema="webdb1">
        <id name="id">
            <column name="id" sql-type="int"/>
        </id>
        <property name="animalName">
            <column name="AnimalName" sql-type="varchar(30)" length="30" not-null="true"/>
        </property>
        <property name="animalType">
            <column name="AnimalType" sql-type="varchar(30)" length="30" not-null="true"/>
        </property>
        <property name="animalColor">
            <column name="AnimalColor" sql-type="varchar(30)" length="30" not-null="true"/>
        </property>
        <property name="animalAge">
            <column name="AnimalAge" sql-type="int" not-null="true"/>
        </property>
        <property name="animalHost">
            <column name="AnimalHost" sql-type="varchar(30)" length="30" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>